@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }
    .btn-success,
    .btn-danger {
        padding: 12px 24px;
        font-size: 18px;
        border-radius: 5px;
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
    }

        .btn-success:hover,
        .btn-danger:hover {
            transform: scale(1.05);
        }

        .btn-success:focus,
        .btn-danger:focus {
            outline: none;
            box-shadow: none;
        }
</style>

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p><strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong></p>
        <form class="row" id="download-data" asp-page="DownloadPersonalData" method="post">
            <div class="col-sm-4">
                <button class="btn btn-success" type="submit">Download</button>
            </div>
        </form>
        <form class="row mt-3" id="delete-data" asp-page="DeletePersonalData" method="post">
            <div class="col-sm-4">
                <button id="delete" class="btn btn-danger" type="submit">Delete</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
