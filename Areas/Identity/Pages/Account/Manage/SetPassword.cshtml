@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        color: #333;
        margin-top: 20px;
    }

    h3 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .text-info {
        color: #007bff;
    }

    .form-floating {
        position: relative;
        margin-bottom: 20px;
    }

        .form-floating input[type="password"] {
            border-radius: 5px;
            border: 1px solid #ccc;
            transition: border-color 0.3s;
            padding: 10px;
            width: 100%;
        }

            .form-floating input[type="password"]:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .form-floating label {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            color: #777;
            pointer-events: none;
            transition: transform 0.3s, font-size 0.3s;
        }

        .form-floating input[type="password"]:focus + .form-label,
        .form-floating input[type="password"]:valid + .form-label {
            transform: translateY(-100%) scale(0.8);
            font-size: 12px;
            color: #007bff;
        }

    .text-danger {
        font-size: 14px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: scale(1.05);
        }

        .btn-primary:focus {
            outline: none;
            box-shadow: none;
        }
</style>

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mt-4">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" required />
                <label asp-for="Input.NewPassword" class="form-label">New Password</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mt-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" required />
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-80 btn btn-lg btn-primary mt-4">Set Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
