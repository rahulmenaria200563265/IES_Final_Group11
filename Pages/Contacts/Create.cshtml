@page
@model ContactManager.Pages.Contacts.CreateModel

<!DOCTYPE html>
<html>
<head>
    <title>Create Contact</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .form-control {
            border-radius: 20px;
        }

        .form-label {
            font-weight: bold;
        }

        .btn-back {
            background-color: #6c757d;
            color: white;
            border-radius: 20px;
            width: 100%;
        }

            .btn-back:hover {
                background-color: #495057;
            }

        .btn-create {
            background-color: #007bff;
            color: white;
            border-radius: 20px;
            width: 100%;
        }

            .btn-create:hover {
                background-color: #0056b3;
            }

        .error-message {
            color: red;
            font-size: 0.9em;
            font-style: italic;
        }

        .input-group-prepend span {
            padding: 10px;
            background-color: #007bff;
            color: white;
            border-radius: 20px 0 0 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Create Contact</h1>

        <form id="create-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Contact.Name" class="form-label">Name</label>
                <input asp-for="Contact.Name" class="form-control" placeholder="Enter Name" />
                <span asp-validation-for="Contact.Name" class="error-message"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="bi bi-geo-alt-fill"></i></span>
                    </div>
                    <input asp-for="Contact.Address" class="form-control" placeholder="Address" />
                </div>
                <span asp-validation-for="Contact.Address" class="error-message"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="bi bi-geo-alt-fill"></i></span>
                        </div>
                        <input asp-for="Contact.City" class="form-control" placeholder="City" />
                    </div>
                    <span asp-validation-for="Contact.City" class="error-message"></span>
                </div>

                <div class="form-group col-md-6">
                    <input asp-for="Contact.State" class="form-control" placeholder="State" />
                    <span asp-validation-for="Contact.State" class="error-message"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <input asp-for="Contact.Zip" class="form-control" placeholder="Zip" />
                    <span asp-validation-for="Contact.Zip" class="error-message"></span>
                </div>

                <div class="form-group col-md-6">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        </div>
                        <input asp-for="Contact.Email" class="form-control" placeholder="Email" />
                    </div>
                    <span asp-validation-for="Contact.Email" class="error-message"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a class="btn btn-back" asp-page="Index">Back to List</a>
                    </div>
                    <div class="col-md-6">
                        <input type="submit" value="Create" class="btn btn-create" />
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/dist/js/bootstrap-icons.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
</body>
</html>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
