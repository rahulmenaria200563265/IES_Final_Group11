@page
@model ContactManager.Pages.Contacts.DeleteModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Delete Contact</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 20px;
        }

        .delete-container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 20px;
            max-width: 600px;
            margin: 0 auto;
        }

            .delete-container h1 {
                font-size: 36px;
                margin-bottom: 30px;
                color: #dc3545;
                text-align: center;
                text-transform: uppercase;
            }

        .delete-details dt {
            font-weight: bold;
            margin-bottom: 5px;
            color: #6c757d;
        }

        .delete-details dd {
            margin-bottom: 15px;
        }

        .btn-back {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
            transition: all 0.3s ease;
        }

            .btn-back:hover {
                background-color: #5a6268;
                border-color: #5a6268;
            }

        .btn-delete {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
            transition: all 0.3s ease;
        }

            .btn-delete:hover {
                background-color: #c82333;
                border-color: #c82333;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="delete-container">
            <h1>Delete Contact</h1>

            <div class="row delete-details">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Contact.Name)</dd>
                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Contact.Address)</dd>
                        <dt class="col-sm-4">City:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Contact.City)</dd>
                        <dt class="col-sm-4">State:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Contact.State)</dd>
                        <dt class="col-sm-4">Zip:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Contact.Zip)</dd>
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Contact.Email)</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Contact.ContactId" />
                        <h5 class="mt-4 mb-3 text-center">Are you sure you want to delete this contact?</h5>
                        <div class="text-center">
                            <a class="btn btn-back me-3" asp-page="./Index">Back to List</a>
                            <input type="submit" value="Delete" class="btn btn-delete" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
