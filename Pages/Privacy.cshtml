@page
@model PrivacyModel
@{
    ViewData["Title"] = "Team Members";
}

<style>
    /* Styles for the Role Management Dashboard */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #e0f7fa;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: #00796b;
        text-align: center;
        margin-top: 30px;
        font-size: 2.5em;
    }

    h4 {
        color: #004d40;
        margin-top: 20px;
        text-align: center;
        font-size: 1.5em;
    }

    p {
        color: #004d40;
        text-align: center;
        margin-bottom: 15px;
        font-size: 1.2em;
    }

    /* User details section */
    .user-details {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 40px;
    }

    .user-card {
        width: 250px;
        border-radius: 12px;
        overflow: hidden;
        margin: 20px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease-in-out;
        background-color: #ffffff;
        cursor: pointer;
    }

        .user-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
        }

        .user-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-bottom: 4px solid #00796b;
            border-radius: 12px 12px 0 0;
        }

        .user-card h2 {
            color: #00796b;
            text-align: center;
            margin: 15px 0 10px;
            font-size: 1.3em;
        }

        .user-card p {
            color: #004d40;
            text-align: center;
            margin: 0 0 15px;
            font-size: 1em;
        }
</style>

<h1>@ViewData["Title"]</h1>

